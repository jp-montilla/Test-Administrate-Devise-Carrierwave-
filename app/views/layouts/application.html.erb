<!DOCTYPE html>
<html>
  <head>
    <title>Custom</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" >
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" ></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Navbar</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to "Home", root_path, :class => 'nav-link' %>
          </li>
          <% if administrator_signed_in? %>
            <li class="nav-item active">
              <%= link_to "Admin", admin_users_path, :style => "color: white", :class => 'nav-link' %>
            </li>
          <% end%>
        </ul>
      </div>

      <p class="navbar-text pull-right">
        <% if administrator_signed_in? %>
          Logged in as <strong><%= current_administrator.email %></strong>.
          <%= link_to "Logout", destroy_administrator_session_path, method: :delete, :class => 'navbar-link'  %>
        <% elsif administrator_signed_in? %>
          Logged in as <strong><%= current_administrator.email %></strong>.
          <%= link_to "Logout", destroy_administrator_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Login as Admin", new_administrator_session_path, :class => 'navbar-link'  %> || 
          <%= link_to "Login as User", new_administrator_session_path, :class => 'navbar-link'  %>
        <% end %>
      </p>
    </nav>


    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
